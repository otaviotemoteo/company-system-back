generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... (enums permanecem iguais)

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(FUNCIONARIO)
  isActive  Boolean   @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  managedProjects Project[]       @relation("ProjectManager")
  projectMembers  ProjectMember[]
  assignedTasks   Task[]
  comments        Comment[]
  documents       Document[]
  activityLogs    ActivityLog[]

  // Índices para buscas comuns
  @@index([role, isActive]) // Buscar usuários por role ativos
  @@index([createdAt])
  @@index([deletedAt]) // Para soft deletes
  @@map("users")
}

model Project {
  id          String          @id @default(uuid())
  title       String
  description String?
  status      ProjectStatus   @default(PLANEJAMENTO)
  priority    ProjectPriority @default(MEDIA)
  budget      Float?
  startDate   DateTime?
  endDate     DateTime?
  deadline    DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  managerId String
  manager   User   @relation("ProjectManager", fields: [managerId], references: [id])

  phases       ProjectPhase[]
  members      ProjectMember[]
  documents    Document[]
  activityLogs ActivityLog[]

  // Índices importantes
  @@index([managerId]) // Já existe automaticamente por FK, mas explícito
  @@index([status, priority]) // Filtrar projetos por status e prioridade
  @@index([deadline]) // Buscar projetos por prazo
  @@index([createdAt])
  @@index([status, managerId]) // Projetos de um gerente por status
  @@map("projects")
}

model ProjectPhase {
  id          String      @id @default(uuid())
  name        String
  description String?
  order       Int
  status      PhaseStatus @default(NAO_INICIADA)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tasks     Task[]
  documents Document[]

  // Índices
  @@index([projectId, order]) // Listar fases de um projeto ordenadas
  @@index([projectId, status]) // Fases por projeto e status
  @@index([status])
  @@map("project_phases")
}

model Task {
  id             String       @id @default(uuid())
  title          String
  description    String?
  status         TaskStatus   @default(PENDENTE)
  priority       TaskPriority @default(MEDIA)
  estimatedHours Float?
  workedHours    Float        @default(0)
  deadline       DateTime?
  completedAt    DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  phaseId      String
  phase        ProjectPhase @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  assignedToId String?
  assignedTo   User?        @relation(fields: [assignedToId], references: [id])

  comments  Comment[]
  documents Document[]

  // Índices críticos para performance
  @@index([phaseId, status]) // Tarefas de uma fase por status
  @@index([assignedToId, status]) // Tarefas atribuídas a um usuário
  @@index([status, priority]) // Dashboard de tarefas
  @@index([deadline]) // Tarefas próximas ao prazo
  @@index([assignedToId, deadline]) // Prazos de um usuário
  @@index([phaseId, assignedToId]) // Tarefas de uma fase por responsável
  @@map("tasks")
}

model ProjectMember {
  id       String   @id @default(uuid())
  role     String
  joinedAt DateTime @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([projectId]) // Membros de um projeto
  @@index([userId]) // Projetos de um usuário
  @@map("project_members")
}

model Document {
  id          String       @id @default(uuid())
  name        String
  type        DocumentType
  fileUrl     String
  fileSize    Int
  description String?
  createdAt   DateTime     @default(now())

  uploadedById String
  uploadedBy   User   @relation(fields: [uploadedById], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  phaseId String?
  phase   ProjectPhase? @relation(fields: [phaseId], references: [id], onDelete: Cascade)

  taskId String?
  task   Task?   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // Índices
  @@index([projectId, type]) // Documentos de um projeto por tipo
  @@index([phaseId])
  @@index([taskId])
  @@index([uploadedById])
  @@index([createdAt])
  @@map("documents")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // Índices
  @@index([taskId, createdAt]) // Comentários de uma tarefa ordenados
  @@index([authorId])
  @@map("comments")
}

model ActivityLog {
  id          String   @id @default(uuid())
  action      String
  description String
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Índices para histórico
  @@index([projectId, createdAt]) // Timeline do projeto
  @@index([userId, createdAt]) // Atividades do usuário
  @@index([createdAt]) // Logs recentes
  @@index([action, createdAt]) // Filtrar por tipo de ação
  @@map("activity_logs")
}